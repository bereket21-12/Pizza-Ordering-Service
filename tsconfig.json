{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "target": "es2015",
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Add this line
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/cache/material-react-table.d.ts", "prisma/seed.mjs","features/**/*.ts","features/**/*.feature", "features/step_definitions/order_pizza..stepsts"],
  "exclude": ["node_modules"]
}
